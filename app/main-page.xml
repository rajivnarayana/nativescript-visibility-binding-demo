<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout>
    <Label text="Tap the button" class="title"/>
    <Button text="TAP" tap="{{ tapAction }}" />
    <Switch loaded="onSwitchLoaded" checked="true"/>
    <Label text="{{ message }}" class="message" textWrap="true" visibility="{{messageVisibility}}" loaded="onLabelLoaded" />
  </StackLayout>
</Page>
